      <h2><%= pluralize(series.errors.count, "error") %> prohibited this series from being saved:</h2>

      <ul>
      <% series.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="ui form" style="padding: 50px 400px;">
  <div class="field">
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label :description%>
    <%= f.text_field :description%>
  </div>

  <p>
    <%= f.select :category, Category.all.collect {|x| [x.name, x.id]}, {:include_blank => "Select One"} %> </br>
  </p>

  <div class="field">
    <%= f.label :season%>
    <%= f.text_field :season%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  </div>
<% end %>
