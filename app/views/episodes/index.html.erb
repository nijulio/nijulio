<p id="notice"><%= notice %></p>

<h1 style="padding-left: 45%; margin-top: 50px; font-size: 30px;">Episodes</h1>

<table class="ui definition table" style="margin-top: 50px;">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
  <div class="ui button" style="text-align: center; vertical-align: middle; margin-left: 42%; margin-top: 30px; width: 200px; height: 40px; background-color: lightgrey;">
        <%= link_to 'New Episode', new_episode_path %>
    </div>

